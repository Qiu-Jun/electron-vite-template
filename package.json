{
    "name": "electron-vite-template",
    "version": "1.0.0",
    "description": "electron-vite-template for June",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "serve": "kill-port 5173 && concurrently -k \"vite\" \"wait-on tcp:5173 && npm-run-all watch\"",
        "watch": "tsc-watch --noClear -p tsconfig.e.json --onSuccess \"npm-run-all start\"",
        "build": "vue-tsc && vite build",
        "start": "cross-env NODE_ENV=development electron ./dist-electron/main.js",
        "build:all": "vue-tsc && vite build && electron-builder --mac --windows",
        "build:mac": "vue-tsc && vite build && electron-builder --mac",
        "build:win": "vue-tsc && vite build && electron-builder --windows"
    },
    "build": {
        "appId": "com.June.app",
        "productName": "June",
        "files": [
            "./*"
        ],
        "directories": {
            "output": "release/${version}"
        },
        "mac": {
            "icon": "/public/icon.ico",
            "artifactName": "${productName}_${version}.${ext}",
            "target": [
                "dmg"
            ]
        },
        "win": {
            "icon": "/public/icon.ico",
            "artifactName": "${productName}_${version}.${ext}",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "runAfterFinish": true,
            "installerIcon": "/public/icon.ico",
            "uninstallerIcon": "/public/icon.ico",
            "installerHeaderIcon": "/public/icon.ico",
            "shortcutName": "June"
        }
    },
    "keywords": [
        "electron",
        "vite",
        "vue3"
    ],
    "author": "June",
    "license": "MIT",
    "dependencies": {
        "pinia": "^2.0.33",
        "vue": "^3.2.47",
        "vue-router": "^4.1.6"
    },
    "devDependencies": {
        "@types/node": "^18.15.0",
        "@vitejs/plugin-vue": "^4.0.0",
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "electron": "^23.1.3",
        "electron-builder": "^23.6.0",
        "kill-port": "^2.0.1",
        "nodemon": "^2.0.21",
        "npm-run-all": "^4.1.5",
        "sass": "^1.58.3",
        "sass-loader": "^13.2.0",
        "tsc-watch": "^6.0.0",
        "typescript": "^4.9.5",
        "vite": "^4.1.4",
        "vite-plugin-html": "^3.2.0",
        "vue-tsc": "^1.2.0",
        "wait-on": "^7.0.1"
    }
}
