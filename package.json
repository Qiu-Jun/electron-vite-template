{
    "name": "electron-vite-template",
    "version": "1.0.1",
    "description": "electron-vite-template for June",
    "main": "dist-electron/index.js",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && vite build",
        "build:all": "rimraf dist-electron && npm run build && electron-builder --mac --windows",
        "build:mac": "rimraf dist-electron && npm run build && electron-builder --mac",
        "build:win": "rimraf dist-electron && npm run build && electron-builder --windows"
    },
    "build": {
        "appId": "com.June.app",
        "productName": "App名称",
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "public/**/*"
        ],
        "directories": {
            "output": "release/${version}"
        },
        "mac": {
            "icon": "./public/icon.ico",
            "artifactName": "${productName}_${version}.${ext}",
            "target": [
                "dmg"
            ]
        },
        "win": {
            "icon": "./public/icon.ico",
            "artifactName": "${productName}_${version}.${ext}",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "runAfterFinish": true,
            "installerIcon": "./public/icon.ico",
            "uninstallerIcon": "./public/icon.ico",
            "installerHeaderIcon": "./public/icon.ico",
            "shortcutName": "App名称"
        }
    },
    "keywords": [
        "electron",
        "vite",
        "vue3"
    ],
    "author": "June",
    "license": "MIT",
    "dependencies": {
        "pinia": "^2.0.33",
        "vue": "^3.2.47",
        "vue-router": "^4.1.6"
    },
    "devDependencies": {
        "@types/node": "^18.15.0",
        "@vitejs/plugin-vue": "^4.0.0",
        "electron": "^23.1.3",
        "electron-builder": "^23.6.0",
        "rimraf": "^4.4.0",
        "sass": "^1.58.3",
        "sass-loader": "^13.2.0",
        "typescript": "^4.9.5",
        "vite": "^4.1.4",
        "vite-plugin-electron": "^0.11.1",
        "vite-plugin-html": "^3.2.0",
        "vue-tsc": "^1.2.0"
    }
}
